{
  "name": "Example Plugin Configuration",
  "description": "Sample configurations for different use cases",
  "configurations": {
    "conservative": {
      "description": "Safe settings for first-time users",
      "settings": {
        "enabled": true,
        "correctionMode": "ask_first",
        "pronounSources": ["pronoundb"],
        "showToasts": true,
        "confidenceThreshold": 90,
        "skipQuotedText": true,
        "debugMode": false
      }
    },
    "aggressive": {
      "description": "Auto-correct everything with high confidence",
      "settings": {
        "enabled": true,
        "correctionMode": "auto_correct",
        "pronounSources": ["pronoundb", "custom"],
        "showToasts": true,
        "confidenceThreshold": 75,
        "skipQuotedText": true,
        "debugMode": false
      }
    },
    "learning": {
      "description": "Block mode to learn correct pronoun usage",
      "settings": {
        "enabled": true,
        "correctionMode": "block_and_warn",
        "pronounSources": ["pronoundb"],
        "showToasts": true,
        "confidenceThreshold": 70,
        "skipQuotedText": true,
        "debugMode": true
      }
    },
    "dm_focused": {
      "description": "Optimized for DM conversations",
      "settings": {
        "enabled": true,
        "correctionMode": "auto_correct",
        "pronounSources": ["pronoundb", "discord_bio"],
        "showToasts": false,
        "confidenceThreshold": 80,
        "skipQuotedText": false,
        "debugMode": false
      }
    }
  },
  "customApiExamples": {
    "local_server": {
      "url": "http://localhost:3000/pronouns/{userId}",
      "description": "Local development server"
    },
    "heroku_app": {
      "url": "https://my-pronoun-api.herokuapp.com/user/{userId}",
      "description": "Heroku hosted API"
    },
    "vercel_function": {
      "url": "https://my-app.vercel.app/api/pronouns?id={userId}",
      "description": "Vercel serverless function"
    }
  },
  "notes": [
    "Copy any configuration to your plugin settings",
    "Adjust confidence thresholds based on your needs",
    "Start with 'conservative' if you're unsure",
    "Use 'learning' mode to understand common mistakes",
    "Custom APIs must return JSON: {\"pronouns\": \"she/her\"}"
  ]
}